<!doctype html>
<html lang="en">
<head>
  <title>Example Application</title>
  <meta charset="UTF-8" />
  <style>
    * {
      font-family: system-ui, sans-serif;
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    html {
      height: 100vh;
      font-size: 15px;
    }

    body {
      display: flex;
      flex-direction: column;
      height: 100%;
    }

    header {
      padding: 1rem;
      font-size: 0.9rem;
      font-weight: bold;
    }

    main {
      flex: 1;
      padding: 1rem;
      width: 100%;
      max-width: 900px;
      margin: 0 auto;
    }

    footer {
      margin: 0.25rem;
    }

    fieldset {
      word-break: break-all;
      font-size: 0.75rem;
      margin-bottom: 1rem;
      border-radius: 0.25rem;
      padding: 0.75rem;
    }

    legend {
      font-weight: bold;
    }

    footer {
      text-align: right;
      font-size: 0.75rem;
      padding: 0 0.1rem;
    }

    h1, h2, h3, h4, h5, h6, p {
      margin: 0 0 1rem 0;
    }

    .nav {
      display: flex;
      list-style: none;
      gap: 0.5rem;
    }

  </style>
</head>
<body>
<header>
  <ul class="nav">
    <li><a href="/">Home</a></li>
    <li><a href="/account">Account</a></li>
    <li>
      <% if (locals.user) { %>
      <a href="/logout">Logout</a>
      <% } else { %>
      <a href="/login">Login</a>
      <% } %>
    </li>
  </ul>
</header>
